<div id="<%= dom_id photo %>">

<br>
<div class="container row postCardDescription">
  <div class="col-sm-6">
    <div class="card">
      <%= link_to(image_tag(photo.image, width: "100%"), photo.image, class: "card-img-top") %>
      <div class="card-body">
        <p class="card-text"><%= photo.legend %></p>
      </div>
   </div>
  </div>
  <div class="col-sm-6" style= "max-height:250px">
    <p><strong>Comentarios:</strong></p>
    <div class="form-floating postComments">
        <% photo.comments.each do |comment| %>
          <span style= "font-size: 1.2vw"><%= comment.user.name %></span> - <span style= "font-size: 1.5vw"><%= comment.post %></span><br>
        <% end %>
    </div>

  </div>
</div>

</div>
